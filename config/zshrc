# Function for creating directories
function make_directories () {
    mkdir $1 
    mkdir -p $1/build
    mkdir -p $1/include 
    mkdir -p $1/src
}

function cpp_project() {
    pwd=$PWD
    mkdir $1 
    cd $1 
    mkdir src include 
    touch CMakeLists.txt
    touch src/main.cpp
    cat << EOF > CMakeLists.txt
cmake_minimum_required(VERSION 3.17.5)
project($1)
set(CMAKE_CXX_STANDARD 17 VERSION 0.0.1 LANGUAGES CXX)
set(SRC_FILES src/main.cpp)
add_executable(${PROJECT_NAME} ${SRC_FILES})
set(CMAKE_EXPORT_COMPILE_COMMANDS ON)
set(CMAKE_BUILD_TYPE RelWithDebInfo)
EOF
}

vf() {
  local base='fd --type f --exclude .git'
  local hidden="$base -H"
  local all="$base -H -I -L"

  LAST_FILE="$(
    eval "$base" \
    | fzf --preview 'bat --style=numbers --color=always --line-range :500 {}' \
          --header 'Ctrl-h: hidden | Ctrl-b: all (hidden + ignored + symlinks)' \
          --prompt 'files> ' \
          --bind "ctrl-h:reload($hidden)" \
          --bind "ctrl-b:reload($all)"
  )"
  [[ -n $LAST_FILE ]] && echo "$LAST_FILE" && nvim "$LAST_FILE"
}

# Function to select and switch/attach to a tmux session using fzf
tf() {
  local session_name
  
  # 1. Get the list of existing tmux session names
  local sessions
  sessions=$(tmux ls -F '#{session_name}' 2>/dev/null)

  if [[ -z "$sessions" ]]; then
    # No sessions exist, prompt to create a new one
    echo "No existing tmux sessions found. Enter a name for a new session:"
    read -r session_name
    if [[ -z "$session_name" ]]; then
      echo "New session creation aborted."
      return 1
    fi
    # Create and attach to the new session
    tmux new-session -s "$session_name"
    return 0
  fi

  # 2. Use fzf to select a session (no preview)
  session_name=$(echo "$sessions" | \
    fzf --prompt 'tmux sessions> ' \
        --header 'Select session (or type a new name to attach/switch):' \
        --no-preview) # <-- Removed the preview here

  # 3. Check if a session was selected/entered
  if [[ -z "$session_name" ]]; then
    echo "No tmux session selected."
    return 1
  fi
  
  # Check if the selection already exists in the sessions list
  local is_existing_session
  is_existing_session=$(echo "$sessions" | grep -w "^$session_name$")

  # 4. Determine action based on TMUX status and selection
  if [[ -n "$TMUX" ]]; then
    # Already inside tmux
    if [[ -n "$is_existing_session" ]]; then
      # Session exists, so switch to it
      echo "Switching to existing session: $session_name"
      tmux switch-client -t "$session_name"
    else
      # Session doesn't exist, create it and switch to it
      echo "Creating and switching to new session: $session_name"
      tmux new-session -d -s "$session_name" # Create in background
      tmux switch-client -t "$session_name"
    fi
  else
    # Outside tmux
    if [[ -n "$is_existing_session" ]]; then
      # Session exists, so attach to it
      echo "Attaching to existing session: $session_name"
      tmux attach-session -t "$session_name"
    else
      # Session doesn't exist, create it and attach to it
      echo "Creating and attaching to new session: $session_name"
      tmux new-session -s "$session_name"
    fi
  fi
}

cf() {
    _VAR =$(fzf)
    _directory="$(dirname $_VAR)"
    cd $directory
}

sb() {
    local container_name="$1"

    if [[ -z "$container_name" ]]; then
        container_name=$(az storage container list --account-name $BLOB_NAME \
        --output tsv --query "[].{name:name}" 2>/dev/null | awk '{print $1}' \
        | fzf --header="Select a container" --no-preview)
        if [[ -z "$container_name" ]]; then
            echo "No container selected."
            return 1
        fi
    fi

    local selected_blob
    selected_blob=$(az storage blob list --account-name $BLOB_NAME \
    --container-name "$container_name" --output tsv --query "[].{name:name}" \
    2>/dev/null | awk '{print $1}' | fzf --header="Select a blob from the container: $container_name" --no-preview)

    if [[ -n "$selected_blob" ]]; then
        # Copy the selected blob name to the clipboard using OSC52
        printf "\e]52;c;$(printf "%s/%s" "$container_name" "$selected_blob" | base64)\a"
        echo "Selected blob '$container_name $selected_blob' has been copied to the clipboard."
    else
        echo "No blob selected."
    fi
}

ff() {
    LAST_FILE="$(fzf --preview 'bat --style=numbers --color=always --line-range :500 {}')"
    BASE64_ENCODED=$(echo "$LAST_FILE" | awk '{print | "base64"}')
    NO_NEWLINES=$(echo "$BASE64_ENCODED" | tr -d '\n')
    printf "\033]52;c;%s\a" "$NO_NEWLINES"
}

